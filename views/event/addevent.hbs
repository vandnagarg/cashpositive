        <form action="/user/signupOrg" method="post">
            <div class="form-group">
                <label for="name">Name of event</label>
                <input type="text" id="name" name="name" class="form-control">
            </div>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" id="date" name="date" class="form-control">
            </div>
            <div class="form-group">
                <label for="name">Organiser</label>
                <input type="text" id="organiser" name="organiser" class="form-control">
            </div>
            <div class="form-group">
                <label for="name">Location</label>
                <input type="text" id="location" name="location" class="form-control">
            </div>
            <div class="form-group">
                <label for="name">Description</label>
                <input type="text" id="description" name="description" class="form-control">
            </div>
            <div class="form-group">
                <label for="name">Ticket Price</label>
                <input type="text" id="ticketPrice" name="ticketPrice" class="form-control">
            </div>

            
